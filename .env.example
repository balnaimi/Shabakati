# Environment Configuration for Network Dashboard
# Copy this file to .env and update the values as needed

# Node Environment
# Options: development, production
NODE_ENV=production

# Server Port
PORT=3001

# Allowed CORS Origins (comma-separated)
# Example: http://localhost:5173,http://localhost:3000,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
# Generate a strong secret key for production use
JWT_SECRET=your-secret-key-change-in-production

# Log Level
# Options: error, warn, info, debug
LOG_LEVEL=info

# Rate Limiting Configuration
# Time window in milliseconds (default: 15 minutes = 900000ms)
RATE_LIMIT_WINDOW_MS=900000

# Maximum number of requests per window (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# Frontend API URL (optional, defaults to '/api' if not set)
# Only needed if the API is on a different domain
# VITE_API_URL=/api
